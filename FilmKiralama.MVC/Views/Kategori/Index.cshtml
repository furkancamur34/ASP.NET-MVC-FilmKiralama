@using FilmKiralama.Entities.Model
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="m-3">
    <div class="text-white text-center m-4 bg-primary">
        <h2><b>KATEGORİLER</b></h2>
    </div>

    <div class="form-group">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Kategori Id</th>
                    <th>Kategori Adı</th>
                    <th>Kategori Açıklama</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kategori in Model)
                {
                    <tr>
                        <td>@kategori.KategoriID</td>
                        <td>@kategori.KategoriAdi</td>
                        <td>@kategori.KategoriAciklama</td>
                        <td>
                            <a class="btn btn-warning" href="/Kategori/Guncelle/@kategori.KategoriID"> Güncelle </a>
                            <a class="btn btn-danger" href="/Kategori/Sil/@kategori.KategoriID"> Sil </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#kategoriEkleModel">Yeni Film Ekle</button>


    <div class="modal fade" id="kategoriEkleModel" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                    <h4 class="modal-title" id="myModalLabel">Kategori Ekle</h4>
                </div>
                <form method="post" action="/Kategori/Ekle">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>
                                Kategori Adı
                            </label>

                            <input type="text" name="KategoriAdi" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>
                                Kategori Açıklama
                            </label>
                            <input type="text" name="KategoriAciklama" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

