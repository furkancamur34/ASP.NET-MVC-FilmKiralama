@model FilmKiralama.Entities.Model.Kategori
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-primary text-center text-white m-3">
    <h2><b>@Model.KategoriAdi Kategorisini Güncelle</b></h2>
</div>

<div class="form-group m-3">
    @using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.KategoriID)
        @Html.Label("Film Adı")
        @Html.TextBoxFor(x => x.KategoriAdi, new { @class = "form-control" })
        <div class="mt-3"></div>
        @Html.Label("Film Yayın Yılı")
        @Html.TextBoxFor(x => x.KategoriAciklama, new { @class = "form-control" })
        <div class="mt-3"></div>
        <button class="btn btn-primary text-center">Kaydet</button>
    }

</div>

