@using FilmKiralama.Entities.Model
@model List<Musteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="m-3">
    <div class="text-white text-center m-4 bg-primary">
        <h2><b>MÜŞTERİLER</b></h2>
    </div>

    <div class="form-group">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Müşteri Id</th>
                    <th>Adı Soyadı</th>
                    <th>Cinsiyeti </th>
                    <th>Dogum Tarihi</th>
                    <th>E-Posta Adresi</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var musteri in Model)
                {
                    <tr>
                        <td>@musteri.MusteriID</td>
                        <td>@musteri.MusteriAdi &nbsp; @musteri.MusteriSoyadi </td>
                        <td>@musteri.MusteriCinsiyeti</td>
                        <td>@musteri.MusteriDogumTarihi.ToShortDateString()</td>
                        <td>@musteri.MusteriEposta</td>
                        <td>
                            <a class="btn btn-warning" href="/Musteri/Guncelle/@musteri.MusteriID"> Güncelle </a>
                            <a class="btn btn-danger" href="/Musteri/Sil/@musteri.MusteriID"> Sil </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#musteriEkleModal">Yeni Musteri Ekle</button>


    <div class="modal fade" id="musteriEkleModal" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                    <h4 class="modal-title" id="myModalLabel">Musteri Ekle</h4>
                </div>
                <form method="post" action="/Musteri/Ekle">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>
                                Müşteri Adı
                            </label>
                            <input type="text" name="MusteriAdi" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>
                                Müşteri Soyadı
                            </label>
                            <input type="text" name="MusteriSoyadi" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>
                                Müşteri Cinsiyeti
                            </label>
                            <input type="text" name="MusteriCinsiyeti" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>
                                Müşteri Doğum Tarihi
                            </label>
                            <input type="text" name="MusteriDogumTarihi" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>
                                Müşteri E-Posta Adresi
                            </label>
                            <input type="text" name="MusteriEposta" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>
                                Müşteri Şifresi
                            </label>
                            <input type="text" name="MusteriSifre" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


